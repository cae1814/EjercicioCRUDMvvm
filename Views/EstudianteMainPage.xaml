<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioCRUDMvvm.Views.EstudianteMainPage"
             xmlns:viewModel="clr-namespace:EjercicioCRUDMvvm.ViewModels"
             x:DataType="viewModel:EstudianteMainPageViewModel"
             xmlns:models="clr-namespace:EjercicioCRUDMvvm.Models"
             Title="Lista de Estudiantes">
    <ScrollView>
        <VerticalStackLayout Padding="10,0,10,0">
            <Button Text="Agregar Estudiante" HorizontalOptions="Start" Command="{Binding GoToAddEstudiantesPageCommand}" BackgroundColor="#0080FF" FontSize="12" />

            <Grid Margin="10,20,10,5" RowDefinitions="Auto" ColumnDefinitions="33*,33*,33*,33*,33*" >
                <Label Text="Nombre" FontAttributes="Bold" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="0" FontSize="11" TextColor="#6E6E6E" />
                <Label Text="Identidad" FontAttributes="Bold" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="1" FontSize="11" TextColor="#6E6E6E"/>
                <Label Text="Nacimiento" FontAttributes="Bold" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="2" FontSize="11" TextColor="#6E6E6E"/>
                <Label Text="Ingreso" FontAttributes="Bold" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="3" FontSize="11" TextColor="#6E6E6E" />
                <Label Text="Padre" FontAttributes="Bold" HorizontalTextAlignment="Start" Grid.Row="0" Grid.Column="4" FontSize="11" TextColor="#6E6E6E"/>
            </Grid>
            <CollectionView ItemsSource="{Binding EstudianteCollection}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Estudiante">
                        <Grid RowSpacing="0" RowDefinitions="10,Auto,10,0.5" ColumnDefinitions="33*,33*,33*,33*,33*" VerticalOptions="FillAndExpand">
                            <Label Text="{Binding Nombre}" Grid.Row="1" Grid.Column="0" FontSize="10" TextColor="#6E6E6E"/>
                            <Label Text="{Binding Identidad}" Grid.Row="1" Grid.Column="1" FontSize="10" TextColor="#6E6E6E"/>
                            <Label Text="{Binding FechaNacimiento}" Grid.Row="1" Grid.Column="2" FontSize="10" TextColor="#6E6E6E"/>
                            <Label Text="{Binding FechaIngreso}" Grid.Row="1" Grid.Column="3" FontSize="10" TextColor="#6E6E6E"/>
                            <Label Text="{Binding NombrePadre}" Grid.Row="1" Grid.Column="4" FontSize="10" TextColor="#6E6E6E" />

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewModel:EstudianteMainPageViewModel}},Path=SelectEstudianteCommand}" CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>